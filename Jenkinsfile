pipeline {
  agent any
  stages {
    stage ('Build') {
      steps {
        echo 'This is the build phase'
      } 
    }
    stage ('Test') {
      steps {
        echo 'This is the testing phase'
      }
    }
    stage ('deploy') {
      steps {
        echo 'This is the deployment phase'
      }
    }
  }
}